#!/usr/bin/env python
import sys
import tornado.template

warning = '''
C!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
C!!!!!!!!!!!!!! AUTOGENERATED FILE -- WILL BE OVERWRITTEN !!!!!!!!!!!!!!
C!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
'''.strip()

loader = tornado.template.Loader('.')

flds = [['surfPAR', 'PAR'],
        ['inputFe', 'iron'],
        ['iceFrac', 'ice'],
        ['windSpeed', 'wind'],
        ['atmospCO2', 'pCO2']
       ]

targets = sys.argv[1:]

for tgt in targets:
    tmpl = loader.load(tgt+'.template')
    with open(tgt, 'w') as f:
        f.write(tmpl.generate(flds=flds, EDIT_THIS_FILE=warning))

